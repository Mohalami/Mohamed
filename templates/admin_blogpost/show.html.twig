{% extends 'base.html.twig' %}

{% block title %}Blogpost{% endblock %}

{% block body %}
    <h1>Blogpost</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blogpost.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ blogpost.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ blogpost.contenu }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ blogpost.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ blogpost.createdAt ? blogpost.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_blogpost_index') }}">back to list</a>

    <a href="{{ path('app_admin_blogpost_edit', {'id': blogpost.id}) }}">edit</a>

    {{ include('admin_blogpost/_delete_form.html.twig') }}
{% endblock %}
