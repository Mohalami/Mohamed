{% extends 'base.html.twig' %}

{% block title %}Hello PeintureController!{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div>
                <div>
                    <p>
                        These can be split ....
                    </p>
                </div>
                {% for peinture in peintures %}
                    <div>
                        <div>
                            <a href="{{ path('realisations_details', {'slug':peinture.slug}) }}">
                                <img src="{{asset(peinture.file)}}" >
                            </a>
                            <a href="{{ path('realisations_details', {'slug':peinture.slug}) }}">
                                <h3>
                                    {{peinture.nom}}
                                </h3>
                                <p>
                                    {{peinture.description|u.truncate(200, '...', false)}}
                                </p>
                            </a>
                            <a href="{{ path('realisations_details', {'slug':peinture.slug}) }}">
                                <hr>
                                <p>
                                    <time>Ajout√©e le {{ peinture.createdAt|date('d/m/Y') }}</time>
                                </p>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
      
    </section>
{% endblock %}

