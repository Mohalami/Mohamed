{% extends 'base.html.twig' %}

{% block title %}Hello PeintureController!{% endblock %}

{% block body %}
    <!-- CONTENT -->
        <div class="detail-container">
            <div>
                <div>
                    <aside class="ouvredetaildesc">
                        <div>
                            <h2>{{ peinture.nom }}</h2>
                            {% for categorie in peinture.categorie %}
                                <span> {{ categorie.nom }} </span>
                            {% endfor %}
                        </div>
                        <p>{{ peinture.description }}</p>

                        <ul>
                            <li>
                                <h6>
                                    Date de Réalisation
                                    <span> {{ peinture.dateRealisation|date('d/m/Y') }}</span>
                                </h6>
                            </li>
                            <li>
                                <h6>
                                    Largeur
                                    <span> {{ peinture.largeur }}Cm</span>
                                </h6>
                            </li>
                            <li>
                                <h6>
                                    Hauteur
                                    <span> {{ peinture.hauteur }}</span>
                                </h6>
                            </li>
                            {% if peinture.enVente %}
                                <li>
                                    <h6>
                                        <strong>Disponible à la vente </strong>
                                        <span><strong>{{ peinture.prix }}</strong></span>
                                    </h6>
                                </li>
                            {% endif %}
                        </ul>
                    </aside>
                </div>

                <div>
                    <section class="artwork-slug">
                        <img src="{{ vich_uploader_asset(peinture, 'imageFile') }}">
                    </section>
                </div>
            </div>
        </div>
        <div class="form-comment">
            {% include "commentaire/form.html.twig" %}
        </div>
            {% include "commentaire/commentaires.html.twig" %}
{% endblock %}
                        