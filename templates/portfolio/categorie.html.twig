{% extends 'base.html.twig' %}

{% block title %}Catégorie détail{% endblock %}

{% block body %}
<!-- WELCOME -->

<div class="categorie-container">
<section>
    <div class="categorie-content">
        <div>
            <div>
                <h1>
                    {{ categorie.nom }}
                </h1>
                <p>
                    {{ categorie.description }}
                </p>
            </div>
       </div>
    </div>
</section>

<section>
    <div>
        <div>
            {% for peinture in peintures %}
                <div>
                    <div class="categorie-img">
                        <img src="{{ vich_uploader_asset(peinture, 'imageFile') }}" class="categorie-img" />
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
</section>
</div>
{% endblock %}
