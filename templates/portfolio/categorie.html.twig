{% extends 'base.html.twig' %}

{% block title %}Hello PortfolioController!{% endblock %}

{% block body %}
<!-- WELCOME -->
{% set img= categorie.peintures|last %}
<section>
    <div class="container">
        <div>
            <div>
                <h1>
                    {{ categorie.nom }}
                </h1>
                <p>
                    {{ categorie.description }}
                </p>
            </div>
       </div>
    </div>
</section>

<section>
    <div class="container">
        <div>
            {% for peinture in peintures %}
                <div>
                    <div>
                        <img src="{{ vich_uploader_asset(peinture, 'imageFile') }}"/>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
</section>
{% endblock %}
