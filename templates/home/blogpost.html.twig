<!-- ARTICLES -->
<section>
    <div>
        <div>
            <div>

                <h2>
                    Dernières Actualités
                </h2>

                <p>
                    These can be splite into mailer grid sizes ...
                </p>

            </div>
        </div>

        <div>
            {% for blogpost in blogposts %}
                <div>
                    <div>
                        <a href="#">

                            <h3>
                                {{ blogpost.titre }}
                            </h3>

                            <p>
                                {{ blogpost.contenu|u.truncate(150, '...', false) }}
                            </p>
                        </a>

                        <a href="#">

                            <hr>

                           <p>
                                <time>Publié le {{ blogpost.createdAt|date('d/m/y') }}</time>
                            </p>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>
