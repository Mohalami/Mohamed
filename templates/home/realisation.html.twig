<section class="artist-section">
    <div class="artist-container">
        <div class="artist-description">
            <h2>Dernières Réalisations</h2>
            <p>Mes toutes dernières réalisations</p>
        </div>

        <div class="artist-content">
            {% for peinture in peintures %}
            <div class="artwork">
                <a href="{{ path('realisations_details', {'slug':peinture.slug}) }}">
                    <img src="{{ vich_uploader_asset(peinture, 'imageFile')}}" alt="{{ peinture.nom }}">
                </a>
                <div class="artwork-details">
                    <a href="{{ path('realisations_details', {'slug':peinture.slug}) }}">
                        <h3>{{ peinture.nom }}</h3>
                        <p>{{ peinture.description|u.truncate(200, '...', false) }}</p>
                    </a>
                    <hr>
                    <p>
                        <time>Ajouté le {{ peinture.createdAt|date('d/m/y') }}</time>
                    </p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
