{% extends 'base.html.twig' %}

{% block title %}Me Contacter{% endblock %}

{% block body %}
    <section class="contact-section">
        <div class="container">
            <div class="contact-header">
                <div class="contact-form">
                    <h2>Me contacter</h2>
                    <p>Une question? Envie d'acheter ou même discuter? N'hésitez pas à me contacter.</p>
                    <hr>

                    {{ form_start(form) }}
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        <div class="form-group">
                            {{ form_errors(form) }}
                        </div>

                        <div class="form-group">
                            <label for="contactName">{{ form_label(form.nom) }}</label>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="contactEmail">{{ form_label(form.email) }}</label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="contactMessage">{{ form_label(form.message) }}</label>
                            {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group mb-5">
                            {{ form_widget(form.envoyer, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
