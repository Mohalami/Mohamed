{% extends 'base.html.twig' %}

{% block title %}Hello PeintureController!{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <div>
                <div>
                    <p>
                        Nos articles récents.
                    </p>
                </div>
                {% for blogpost in blogposts %}
                    <div>
                        <div>
                            <a href="{{ path('actualites_detail', {'slug': blogpost.slug}) }}">
                                <h3>
                                    {{asset(blogpost.titre)}}
                                </h3>
                                <p>
                                    {{blogpost.contenu|u.truncate(150, '...', false)}}
                                </p>
                            </a>
                            <a href="{{ path('actualites_detail', {'slug': blogpost.slug}) }}">
                               <hr>
                                <p>
                                    <time>
                                        Publié le {{ blogpost.createdAt|date('d/m/y') }}
                                    </time>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
      
    </section>
{% endblock %}

